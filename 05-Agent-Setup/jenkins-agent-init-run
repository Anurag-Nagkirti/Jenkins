pipeline{
    agent {label "worker-node01"}

    stages{

        stage('Build'){
            steps{
                sh 'echo "This is building step..."'
                sh 'echo "Creating file to test..."'
                sh 'echo "Hello, This is agent testing setup!" >> agent.txt'
            }
        }

        stage('Test'){
            steps{
                sh 'cat agent.txt'
                sh 'echo "file agent.tct is present!"'
            }
        }

        stage ('Deploy'){
            steps{
                sh 'pwd'
                sh 'echo "Success"'
            }
        }
    }
}
